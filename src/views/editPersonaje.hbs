<div class="container2">
<h1>Editar Astronauta</h1>
<div class="astronauta">
<form
  action="/personajes/edit/{{personaje._id}}"
  method="POST"
  enctype="multipart/form-data"
>
  <label>Nombre:</label>
  <input type="text" name="nombre" id="nombre" value="{{personaje.nombre}}" required /><br><br>
  <label>Edad:</label>
  <input type="number" name="edad" id="edad" value="{{personaje.edad}}" required /><br><br>
  <label>Poder:</label>
  <input type="text" name="casa" id="casa" value="{{personaje.casa}}" required /><br><br>
  <label>Rol:</label>
  <input type="text" name="rol" id="rol" value="{{personaje.rol}}" required /><br><br>
  
  {{#if personaje.imagen}}
   <label>Imagen Actual:</label><br>
    <img src="/uploads/{{personaje.imagen}}" alt="{{personaje.nombre}}" width="100"><br><br>
  {{/if}}
  <input type="hidden" name="imagenActual" value="{{personaje.imagen}}">
  <label>elegir imagen:</label>
  <input type="file" name="imagen"/><br><br>
    
  <button type="submit" class="btn btn-warning">Actualizar</button>
</form>
 </div>
</div>